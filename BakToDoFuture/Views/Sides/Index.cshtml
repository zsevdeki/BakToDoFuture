@model IEnumerable<BakToDoFuture.Models.Side>

@{
    ViewBag.Title = "Taraf Liste";
}

<h2>Liste</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create", null, new { @class = "btn btn-primary" })
    <a class="dt-button buttons-excel buttons-html5 btn yellow btn-outline" tabindex="0" aria-controls="sample_1" href="@Url.Action("ExportToExcel","Sides")" style="float:right;"><span>Excel Aktar</span></a>
    <a class="dt-button buttons-csv buttons-html5 btn purple btn-outline" tabindex="0" aria-controls="sample_1" href="@Url.Action("ExportToCsv","Sides")" style="float:right;"><span>Csv Aktar</span></a>
</p>
<table id="tblRecords" class="table">
    <thead>
    <tr>
        <th class="text-nowrap all">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="text-nowrap">
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th class="text-nowrap">
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th class="text-nowrap">
            @Html.DisplayNameFor(model => model.UpdateDate)
        </th>
        <th class="text-nowrap">
            @Html.DisplayNameFor(model => model.UpdateBy)
        </th>
        <th data-orderable="false" class="all">Eylemler</th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdateBy)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.Id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}
    </tbody>
</table>
